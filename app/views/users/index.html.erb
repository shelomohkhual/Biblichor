                        <%# STARS %>
                        <span class="fa fa-star star"></span>
                        <span class="fa fa-star star"></span>
                        <span class="fa fa-star star"></span>
                        <span class="fa fa-star star"></span>
                        <span class="fa fa-star"></span>
                        </p>
                    </div>
                    <div>
                        <%= link_to "<span>RM 10.00</span>".html_safe,book_path(@books[0]), class:"btn btn-sm sharp btn-price" %><%# PRICE-BUTTON %>
                    </div>
                </div>
            </div>
        </div>
    <% end %>

    </div>
</div>
