<br>
<%# link_to('View Book', books_path) %>
   <div class="container">
    <% if @books == nil %>
        <div class="container text-center">
            <h4 class="fg-color"> There's no books yet!</h4>
        </div>
    <% else %>
    <div>
        <h4 class="main-color font-italic">Romance</h4> <%#FOR GENRE%>
    </div>
    <div class="row">
        <% @books.each do |book| %>
            <div class="container col-md-3 col-sm-6 shadow-md">
                <div class="product-grid6">
                    <div class="product-image6">
                        <a href="<%=book_path(book)%>">
                            <%= image_tag book.front_cover, style:"width:245px; height:370px;"%>
                        </a>
                    </div>
                    <div class="product-content text-center">
                        <div>
                            <h6><strong><%= book.title%></strong></h6> <%# TITLE %>
                            <p class="font-italic author"><%=book.author%><br><%# AUTHOR %>
                            <%# STARS %>
                            <span class="fa fa-star star"></span>
                            <span class="fa fa-star star"></span>
                            <span class="fa fa-star star"></span>
                            <span class="fa fa-star star"></span>
                            <span class="fa fa-star"></span>
                            </p>
                        </div>
                        <div>
                            <%= link_to "<span>RM 10.00</span>".html_safe,book_path(book), class:"btn btn-sm sharp btn-price" %><%# PRICE-BUTTON %>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
</div>
    <% end %>
    </div>