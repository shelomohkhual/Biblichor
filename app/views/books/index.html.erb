<%# link_to('View Book', books_path) %>
   <div class="container">
    <% if @books == nil %>
        <div class="container text-center">
            <h4 class="fg-color"> There's No Book in your shelve.</h4>
        </div>
    <% else %>
    <div>
        <h4 class="main-color font-italic">My Shelve</h4> <%#FOR GENRE%>
    </div>
    <div class="row">
        <% @user_books.each do |book| %>
            <div class="container col-md-3 col-sm-6 shadow-md">
                <div class="product-grid6">
                    <div class="product-image6">
                        <a href="<%=book_path(book)%>">
                            <%= image_tag book.front_cover, style:"width:245px; height:370px;"%>
                        </a>
                    </div>
                    <div class="product-content text-center">
                        <div>
                            <h5><strong><%= book.title%></strong></h5> <%# TITLE %>
                            <p class="font-italic author"><%=book.author%> <%# AUTHOR %>
                            <br>
                            Genre: <%= link_to book.genre, class:"genre fg-color" %> <%# GENRE %>
                            <br>
                            <%# STARS %>
                            <span class="fa fa-star star"></span>
                            <span class="fa fa-star star"></span>
                            <span class="fa fa-star star"></span>
                            <span class="fa fa-star star"></span>
                            <span class="fa fa-star"></span>
                            </p>
                        </div>
                        <div>
                            <% if @book.price != nil && @book.price != "" %>
                             <%= link_to "<span>RM #{@book.price}</span>".html_safe,user_path, class:"btn btn-sm sharp btn-price" %><%# PRICE-BUTTON %>
                            <% else %>
                             <%= link_to "<span>unknow</span>".html_safe,user_path, class:"btn btn-sm sharp btn-price" %><%# PRICE-BUTTON %>
                            <% end %>                        
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
</div>
    <% end %>
    </div>