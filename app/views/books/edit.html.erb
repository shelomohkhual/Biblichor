<%# NEW BOOK-FORM %>
<div class="container text-center">
  <h4 class="main-color">edit-book</h4>
  <div class="row">

  <div class="col-sm-1">
  </div>

    <div class="col-md-10">
        <div class="navbar">
            <div class="nav-header">
                <%= link_to 'Back', :back , class:"fg-color"%>
            </div>
            <div class="text-right fg-color"> 
            <% if user_signed_in? %>
                <% if current_user.id == @book.user.id %>
                <i class="fas fa-book"></i>
                <%= link_to 'my-books', books_path, class:"fg-color" %>
                <% end %>
            <% end %>
            </div>
        </div>
     <div class="container text-left sign-form">
  
     <%= render 'form', book: @book %>
     </div>
     <%= link_to 'remove this book', @book, method: :delete, data: { confirm: "removing #{@book.title} from your bookshelf?" }, class:"danger"%>
</div>
<div class="col-sm-1">
  </div>
    
    </div>
</div>

<script>
$(document).ready(function() {
     $(".genre-tags").select2({
    allowClear: true,
    tags: true,
    tokenSeparators: [','],
    theme: 'bootstrap',
    placeholder: 'add-genre-tags'
    }); });
</script>